<div class="container-fluid" id="content" style="top: 15%">
    <form>
        <div class="row">
            <div class="form-group col-4">
                <label>Cryptocurrency</label>
                <select class="form-control" id="cryptoPicker">
                    <option>Bitcoin</option>
                    <option>Ethereum</option>
                    <option>Litecoin</option>
                </select>
            </div>
            <div class="form-group col-4">
                <label>Quantity</label>
                <input type="number" min="0" class="form-control" placeholder="Quantity" required>
            </div>
            <div class="form-group col-4">
                <label>Exchange</label>
                <select class="form-control" id="exchangePicker">
                    <option>Bittrex</option>
                    <option>Binance</option>
                    <option>Coinbase</option>
                </select>
            </div>
            <div class="form-group col-auto">
                <button type="submit" class="btn btn-primary">Add to Portfolio</button>
            </div>
        </div>
    </form>
</div>